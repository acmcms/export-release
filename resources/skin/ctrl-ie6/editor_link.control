%><SCRIPT>
<%INCLUDE: 'EventsMethods.js' %>
var eventMethods = CreateEventMethods();

var params = window.dialogArguments;

function SetDefaults(){
	if(params){
		if (params.path){
			URL.value = params.path;
			params.path.indexOf('/_finder/') < 0 && (finderFlag.checked = false);
		}
				params.title && (Title.value = params.title);
				params.target && (Target.value = params.target);
	}
	<%IF:path%>
		URL.value = <%= Format.jsString(path) %>;
	<%/IF%>
	buffer = document.getElementById('targetBuffer');
}
</SCRIPT>



<SCRIPT>

<%EXEC:UAver = indexOf( Request.UserAgent() || '', 'MSIE 5.0') > 0 ? '5' : '0' %>

function SubMit(){
	if(URL.value.indexOf('mailto:') < 0 && URL.value.indexOf('tp:/') < 0){
		buffer.src = "getLinkagePublicUrl?" + (finderFlag.checked ? "mode=finder&" : "") + "path="+URL.value;
	}else{
		ReturnUrl(URL.value);
	}
}

// standard routine v2.0
function parseUrlEncoded( url ){
	var result = {};
	var array = url.split('&');
	for( var i in array ){
		var current = array[i];
		var index = current.indexOf('=');
		if( index > 0 ){
			var key = current.substring(0, index);
			var value = decodeURIComponent(current.substring(index+1));
			var ready = result[ key ];
			if( ready == undefined ){
				result[ key ] = value;
			}else{
				if( isArray( ready ) ){
					ready.push( value );
				}else{
					result[ key ] = [ ready, value ];
				}
			}
		}
	}
	return result;
}
var map = parseUrlEncoded(window.location.href);

function ReturnUrl(arg){
	var result = [];
	result.path = arg;
	result.title = Title.value;
	result.target = Target.value;
	if(window.opener && window.opener.CKEDITOR){
		window.opener.CKEDITOR.tools.callFunction(map.CKEditorFuncNum, arg);
	}else{
		window.returnValue = result;
	}
	window.close();
}


function SwitchView(){
	if (!myTable.viewFlag){
		document.all['pathControl'].src = 'MiniFrameSet.htm<%=pathLink ? '?path='+ encodeURI(pathLink) : ''%>';
		myTable.viewFlag = true;
		myTable.cells[0].style.display = '';
		myTable.height = '100%';
		var h = Number(window.dialogHeight.split('px')[0]) + 250;
		window.dialogHeight = h+'px';
	}
}

